{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
